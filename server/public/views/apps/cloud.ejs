<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OneDrive</title>
    <link rel="stylesheet" href="<%= staticUrl('/stylesheets/style.css') %>">
    <script src="<%= staticUrl('/javascripts/message-bus.js') %>"></script>
    <script src="<%= staticUrl('/javascripts/cloud-app.js') %>"></script>
    <script defer src="<%= staticUrl('/javascripts/alpine.js') %>"></script>
    <style>
        [x-cloak] { display: none !important; }
    </style>
</head>
<body class="bg-gray-50 h-screen flex flex-col overflow-hidden" x-data="cloudApp">

    <!-- Header OneDrive -->
    <header class="bg-white border-b border-gray-200 shadow-sm shrink-0">
        <div class="flex items-center justify-between px-6 py-3">
            <div class="flex items-center space-x-4">
                <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M13.8 2.3c-2.7 0-5 1.7-5.9 4.1C6.4 6.9 5 8.5 5 10.5c0 .3 0 .6.1.9C2.9 12.1 1.5 14.3 1.5 17c0 3.3 2.7 6 6 6h11c3.3 0 6-2.7 6-6 0-2.9-2.1-5.4-4.9-5.9-.3-3.7-3.4-6.8-7.8-6.8z"/>
                </svg>
                <h1 class="text-xl font-semibold text-gray-900">OneDrive</h1>
            </div>
            <div class="flex items-center space-x-4">
                <button class="px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded flex items-center gap-1">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    Rechercher
                </button>
            </div>
        </div>
    </header>

    <!-- Navigation Bar -->
    <div class="bg-white border-b border-gray-200 px-6 py-2 shrink-0">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
            <span class="text-blue-600 hover:underline cursor-pointer">Mes fichiers</span>
            <span>/</span>
            <span>Documents</span>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="bg-white border-b border-gray-200 px-6 py-3 shrink-0">
        <div class="flex items-center space-x-4">
            <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 flex items-center space-x-2 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                <span>Nouveau</span>
            </button>
            <button class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded flex items-center space-x-2 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <span>Charger</span>
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto p-6">
        <div class="bg-white rounded-lg shadow border border-gray-200">
            <!-- Table Header -->
            <div class="grid grid-cols-12 gap-4 px-6 py-3 border-b border-gray-200 text-sm font-semibold text-gray-700 bg-gray-50 rounded-t-lg">
                <div class="col-span-6">Nom</div>
                <div class="col-span-2">Modifié</div>
                <div class="col-span-2">Taille</div>
                <div class="col-span-2"></div>
            </div>

            <!-- File List -->
            <div>
                <template x-for="file in files" :key="file.name">
                    <div class="grid grid-cols-12 gap-4 px-6 py-4 border-b border-gray-100 hover:bg-gray-50 items-center group transition-colors">
                        <div class="col-span-6 flex items-center space-x-3">
                            <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6z"/>
                                <path d="M14 2v6h6"/>
                            </svg>
                            <span class="text-gray-900 font-medium" x-text="file.name"></span>
                        </div>
                        <div class="col-span-2 text-sm text-gray-600" x-text="file.modified"></div>
                        <div class="col-span-2 text-sm text-gray-600" x-text="file.size"></div>
                        <div class="col-span-2 flex justify-end">
                            <button 
                                @click="downloadFile(file.name)"
                                class="p-2 text-blue-600 hover:bg-blue-50 rounded-full transition-all opacity-0 group-hover:opacity-100"
                                title="Télécharger"
                            >
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </main>

    <!-- Loading Modal -->
    <div
        x-show="isLoading"
        x-cloak
        class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 backdrop-blur-sm"
    >
        <div class="bg-white rounded-lg shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all">
            <div class="text-center">
                <div class="mb-4">
                    <svg class="animate-spin h-16 w-16 text-blue-600 mx-auto" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <h2 class="text-xl font-semibold text-gray-900 mb-2">Téléchargement en cours...</h2>
                <p class="text-gray-600 mb-4" x-text="loadingFileName"></p>
                <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
                    <div class="bg-blue-600 h-2 rounded-full animate-pulse" style="width: 65%"></div>
                </div>
                <p class="text-sm text-gray-500">Veuillez patienter...</p>
            </div>
        </div>
    </div>

</body>
</html>
