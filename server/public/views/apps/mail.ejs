<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Outlook</title>
    <link rel="stylesheet" href="<%= staticUrl('/stylesheets/style.css') %>">
    <script src="<%= staticUrl('/javascripts/message-bus.js') %>"></script>
    <script src="<%= staticUrl('/javascripts/mail-app.js') %>"></script>
    <script defer src="<%= staticUrl('/javascripts/alpine.js') %>"></script>
    <style>
        [x-cloak] { display: none !important; }
        .email-list-item.active {
            background-color: #cce6ff;
            border-left-color: #0078d4;
        }
    </style>
</head>
<body class="bg-base-100 h-screen flex flex-col overflow-hidden text-sm" x-data="mailApp">

    <!-- Top Blue Bar (Outlook Header) -->
    <div class="bg-[#0078d4] text-white p-3 flex items-center gap-4 shrink-0 shadow-sm">
        <div class="font-bold text-lg flex items-center gap-2">
            <span>üìß</span> Outlook
        </div>
        <div class="flex-1 max-w-md bg-white/20 rounded px-2 py-1 flex items-center text-white/80">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
            <span class="text-xs">Rechercher</span>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="bg-gray-100 border-b border-gray-200 p-2 flex gap-2 items-center shrink-0 text-gray-700">
        <button class="btn btn-xs btn-ghost gap-1 hover:bg-gray-200 font-normal normal-case" @click="fetchData()">
            <svg class="w-4 h-4 text-[#0078d4]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>
            Actualiser
        </button>
        <div class="h-4 w-px bg-gray-300 mx-1"></div>
        <button class="btn btn-xs btn-ghost gap-1 hover:bg-gray-200 font-normal normal-case">
            <svg class="w-4 h-4 text-[#0078d4]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
            Nouveau courrier
        </button>
    </div>

    <!-- Main Layout (2 Columns) -->
    <div class="flex-1 flex overflow-hidden">

        <!-- Left Column: Mail List -->
        <div class="w-1/3 min-w-[250px] max-w-sm border-r border-gray-200 flex flex-col bg-white">
            <div class="p-3 font-bold text-gray-700 border-b border-gray-100 flex justify-between items-center">
                <span>Bo√Æte de r√©ception</span>
                <span class="text-xs font-normal text-gray-500 bg-gray-100 px-1.5 py-0.5 rounded-full" x-text="mails.length"></span>
            </div>

            <div class="flex-1 overflow-y-auto">
                <template x-for="mail in mails" :key="mail.id">
                    <div
                        @click="selectMail(mail)"
                        class="email-list-item p-3 border-b border-gray-100 cursor-pointer hover:bg-gray-50 border-l-4 border-l-transparent transition-colors flex items-start gap-2"
                        :class="{ 'active': selectedMail?.id === mail.id }"
                    >
                        <!-- Unread indicator -->
                        <div class="pt-1.5 w-3 shrink-0">
                            <div x-show="!mail.read" class="w-2 h-2 rounded-full bg-[#0078d4]"></div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex justify-between items-baseline mb-1">
                                <span class="truncate pr-2" :class="mail.read ? 'text-gray-600' : 'font-bold text-gray-800'" x-text="mail.sender"></span>
                                <span class="text-xs text-gray-400 whitespace-nowrap" x-text="mail.date"></span>
                            </div>
                            <p class="text-sm truncate" :class="mail.read ? 'text-gray-500' : 'font-semibold text-gray-800'" x-text="mail.title"></p>
                            <p class="text-xs text-gray-400 truncate mt-0.5" x-text="mail.description?.substring(0, 60) + '...'"></p>
                        </div>
                    </div>
                </template>

                <template x-if="mails.length === 0">
                    <div class="p-8 text-center text-gray-400">
                        <p>Aucun courrier</p>
                    </div>
                </template>
            </div>
        </div>

        <!-- Right Column: Reading Pane -->
        <div class="flex-1 bg-gray-50 flex flex-col overflow-hidden">

            <template x-if="selectedMail">
                <div class="h-full flex flex-col bg-white m-4 rounded shadow-sm border border-gray-200">
                    <!-- Mail Header -->
                    <div class="p-6 border-b border-gray-100">
                        <h2 class="text-2xl font-bold text-gray-800 mb-4" x-text="selectedMail.title"></h2>

                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-xl" x-text="selectedMail.senderIcon || 'üìß'"></div>
                            <div>
                                <div class="font-bold text-gray-700" x-text="selectedMail.sender"></div>
                                <div class="text-xs text-gray-500">√Ä: <span class="bg-gray-100 px-1 rounded">Utilisateur</span></div>
                            </div>
                            <div class="ml-auto text-xs text-gray-400" x-text="selectedMail.date"></div>
                        </div>
                    </div>

                    <!-- Mail Body -->
                    <div class="flex-1 p-8 overflow-y-auto">
                        <div class="prose prose-sm max-w-none">
                            <p class="text-base leading-relaxed text-gray-800 whitespace-pre-line" x-text="selectedMail.description"></p>
                        </div>

                        <div class="mt-8 border-t pt-4">
                            <button class="btn btn-primary btn-sm gap-2 normal-case text-white bg-[#0078d4] border-[#0078d4] hover:bg-[#005a9e]">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>
                                R√©pondre
                            </button>
                            <button class="btn btn-ghost btn-sm normal-case">Transf√©rer</button>
                        </div>
                    </div>
                </div>
            </template>

            <!-- Empty State -->
            <template x-if="!selectedMail">
                <div class="h-full flex flex-col items-center justify-center text-gray-400">
                    <svg class="w-24 h-24 mb-4 opacity-20" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/></svg>
                    <p class="text-lg">S√©lectionnez un message pour le lire</p>
                </div>
            </template>
        </div>
    </div>
</body>
</html>
