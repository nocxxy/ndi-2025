            </div>
            
            <div class="flex-1 overflow-y-auto">
                <template x-for="task in tasks" :key="task.id">
                    <div 
                        @click="selectedTask = task"
                        class="email-list-item p-3 border-b border-gray-100 cursor-pointer hover:bg-gray-50 border-l-4 border-l-transparent transition-colors"
                        :class="{ 'active': selectedTask?.id === task.id, 'opacity-60': task.completed }"
                    >
                        <div class="flex justify-between items-baseline mb-1">
                            <span class="font-bold text-gray-800 truncate pr-2" x-text="task.title"></span>
                            <span class="text-xs text-gray-400 whitespace-nowrap">10:42</span>
                        </div>
                                                                        <div class="flex items-center gap-1 mb-1">
                                                                            <span 
                                                                                class="text-xs px-1 rounded text-white" 
                                                                                :class="{
                                                                                    'bg-green-500': task.completed,
                                                                                    'bg-red-500': task.failed,
                                                                                    'bg-gray-400': task.blocked,
                                                                                    'bg-[#0078d4]': !task.completed && !task.failed && !task.blocked
                                                                                }"
                                                                                x-text="task.completed ? 'Termin√©' : (task.failed ? '√âchec' : (task.blocked ? 'Suspendu' : 'Nouveau'))"
                                                                            ></span>
                                                                        </div>
                                                                        <p class="text-xs text-gray-500 truncate" x-text="task.description"></p>
                                                                    </div>
                                                                </template>
                                                                
                                                                <template x-if="tasks.length === 0">
                                                                    <div class="p-8 text-center text-gray-400">
                                                                        <p>Aucun message</p>
                                                                    </div>
                                                                </template>
                                                            </div>
                                                        </div>
                                                
                                                        <!-- Right Column: Reading Pane -->
                                                        <div class="flex-1 bg-gray-50 flex flex-col overflow-hidden">
                                                            <template x-if="selectedTask">
                                                                <div class="h-full flex flex-col bg-white m-4 rounded shadow-sm border border-gray-200">
                                                                    <!-- Email Header -->
                                                                    <div class="p-6 border-b border-gray-100">
                                                                        <h2 class="text-2xl font-bold text-gray-800 mb-4" x-text="selectedTask.title"></h2>
                                                                        
                                                                        <div class="flex items-center gap-3">
                                                                            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-xl">
                                                                                ü§ñ
                                                                            </div>
                                                                            <div>
                                                                                <div class="font-bold text-gray-700">Syst√®me NDI</div>
                                                                                <div class="text-xs text-gray-500">√Ä: <span class="bg-gray-100 px-1 rounded">Utilisateur</span></div>
                                                                            </div>
                                                                            <div class="ml-auto text-xs text-gray-400 flex flex-col items-end">
                                                                                <span>Jeu 04 D√©c</span>
                                                                                <span>10:42</span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                
                                                                    <!-- Email Body -->
                                                                    <div class="flex-1 p-8 overflow-y-auto">
                                                                        
                                                                        <!-- Blocked Warning -->
                                                                        <div x-show="selectedTask.blocked" class="mb-6 p-4 bg-red-50 border border-red-100 rounded-lg flex items-center gap-3 text-red-700">
                                                                             <svg class="w-6 h-6 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                                                                             <div>
                                                                                 <p class="font-bold">Communication Suspendue</p>
                                                                                 <p class="text-sm">Une urgence syst√®me (t√¢che bloquante) n√©cessite votre attention imm√©diate. Les autres missions sont temporairement gel√©es.</p>
                                                                             </div>
                                                                        </div>
                                                
                                                                        <div class="prose prose-sm max-w-none" :class="{ 'opacity-50 pointer-events-none': selectedTask.blocked }">
                                                                            <p class="text-base leading-relaxed text-gray-800" x-text="selectedTask.description"></p>
                                                                            
                                                                            <div class="mt-8 p-4 bg-blue-50 rounded-lg border border-blue-100">
                                                                                <h4 class="font-bold text-[#0078d4] mb-2 flex items-center gap-2">
                                                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                                                                                    Objectif de mission
                                                                                </h4>
                                                                                <div class="grid grid-cols-2 gap-4 text-xs">
                                                                                    <div>
                                                                                        <span class="text-gray-500">√âtat:</span>
                                                                                        <span 
                                                                                            class="font-bold ml-1"
                                                                                            :class="{
                                                                                                'text-green-600': selectedTask.completed,
                                                                                                'text-red-600': selectedTask.failed,
                                                                                                'text-gray-500': selectedTask.blocked,
                                                                                                'text-orange-500': !selectedTask.completed && !selectedTask.failed && !selectedTask.blocked
                                                                                            }"
                                                                                            x-text="selectedTask.completed ? 'Accompli' : (selectedTask.failed ? '√âchec' : (selectedTask.blocked ? 'Suspendu' : 'En attente'))"
                                                                                        ></span>
                                                                                    </div>
                                                                                    
                                                                                    <!-- Show unlocks if any -->
                                                                                    <template x-if="selectedTask.unlocksApps && selectedTask.unlocksApps.length > 0">
                                                                                        <div>
                                                                                            <span class="text-gray-500">R√©compense:</span>
                                                                                            <span class="font-bold text-gray-700 ml-1">Nouvelle Application</span>
                                                                                        </div>
                                                                                    </template>
                                                                                </div>
                                                                            </div>
                                                
                                                                            <div class="mt-8 border-t pt-4">
                                                                                <button class="btn btn-primary btn-sm gap-2 normal-case text-white bg-[#0078d4] border-[#0078d4] hover:bg-[#005a9e]">
                                                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>
                                                                                    R√©pondre
                                                                                </button>
                                                                                <button class="btn btn-ghost btn-sm normal-case">Transf√©rer</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </template>                        
                                    <!-- Empty State -->
                                    <template x-if="!selectedTask">
                                        <div class="h-full flex flex-col items-center justify-center text-gray-400">
                                            <svg class="w-24 h-24 mb-4 opacity-20" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/></svg>
                                            <p class="text-lg">S√©lectionnez un √©l√©ment pour le lire</p>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </body>
                        </html>            