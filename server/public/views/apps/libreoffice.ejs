            <span>Aide</span>
        </div>
        
        <!-- Toolbar -->
        <div class="flex items-center justify-between px-4 py-2 bg-[#f0f0f0]">
            <div class="flex items-center gap-4">
                <h1 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
