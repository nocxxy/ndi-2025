    </div>

    <!-- Editor Area -->
    <div class="flex-1 bg-gray-500 p-8 overflow-auto flex justify-center">
        <div class="bg-white shadow-xl w-full max-w-4xl h-[800px] p-12 relative rounded-sm border border-gray-300">
            
            <!-- Overlay Text (Colored) -->
            <div 
                class="absolute inset-12 text-lg leading-relaxed font-serif whitespace-pre-wrap break-words pointer-events-none select-none"
                x-html="htmlContent"
            ></div>

            <!-- Input Area (Transparent) -->
            <textarea 
                x-model="userInput"
                @input="handleInput"
                class="absolute inset-12 w-[calc(100%-6rem)] h-[calc(100%-6rem)] text-lg leading-relaxed font-serif resize-none border-none bg-transparent focus:ring-0 p-0 text-transparent caret-black z-10 outline-none"
                spellcheck="false"
                autofocus
            ></textarea>

        </div>
    </div>

    <!-- Success Modal -->
    <div x-show="!isGameActive && timeLeft > 0" x-cloak class="fixed inset-0 bg-black/50 flex items-center justify-center z-50">
